---
import { supabase } from "../lib/supabase.ts";

interface ProducedTrack {
  id: string;
  title: string;
  description: string;
  spotify_url?: string;
}

const { data: tracks, error } = await supabase
  .from("produced_tracks")
  .select("*")
  .order("created_at", { ascending: false });

if (error) {
  console.error("Error fetching tracks:", error);
}
---

<section id="produced" class="produced-section">
  <h1 class="produced-title">Music I've Produced</h1>
  <p class="produced-subtitle">
    Listen to the projects that I have worked on!üéõÔ∏è
  </p>

  <div class="produced-grid">
    {
      tracks?.map((track) => (
        <div class="produced-card">
          <h2 class="produced-track-title">{track.title}</h2>
          <p class="produced-track-description">{track.description}</p>
          {track.spotify_url && (
            <a
              href={track.spotify_url}
              target="_blank"
              rel="noopener noreferrer"
              class="spotify-link"
            >
              &#127925; Listen on Spotify
            </a>
          )}
        </div>
      ))
    }
  </div>
</section>

<style>
  .produced-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 5rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .produced-title {
    font-size: 2.5rem;
    font-weight: 900;
    color: white;
    margin-bottom: 1rem;
  }

  .produced-subtitle {
    color: #aaaaaa;
    font-size: 1.125rem;
    font-style: italic;
    max-width: 600px;
    margin-bottom: 3rem;
  }

  .produced-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    width: 100%;
  }

  @media (min-width: 768px) {
    .produced-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .produced-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .produced-card {
    background: rgba(255, 255, 255, 0.05); /* Glassy transparent */
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 1.5rem;
    padding: 2rem;
    backdrop-filter: blur(6px);
    transition:
      transform 0.3s,
      box-shadow 0.3s,
      background 0.3s;
    cursor: default;
  }

  .produced-card:hover {
    transform: scale(1.03);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 15px rgba(0, 255, 128, 0.4);
  }

  .produced-track-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: white;
  }

  .produced-track-description {
    color: #cccccc;
    font-size: 1rem;
  }
  .spotify-link {
    margin-top: 1rem;
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #1db954; /* Spotify green */
    color: white;
    font-weight: bold;
    text-decoration: none;
    border-radius: 9999px;
    transition: background-color 0.3s;
  }

  .spotify-link:hover {
    background-color: #159b43;
  }
</style>
