---
import "../styles/global.css";

interface Service {
  title: string;
  description: string;
  link?: string;
}

const services: Service[] = [
  {
    title: "Singing",
    description: "Professional vocal performances to bring your music to life.",
  },
  {
    title: "Songwriting",
    description:
      "Custom lyrics and melodies crafted to fit your artistic vision.",
  },
  {
    title: "Music Production",
    description:
      "Full song production — from idea development to a fully produced track.",
  },
  {
    title: "Mixing",
    description: "Balancing and polishing your track to a professional sound.",
  },
];
---

<section id="services" class="services-section">
  <h1 class="services-title">Music Services</h1>
  <p class="services-description">
    Explore a range of music services designed to meet your creative needs.
    Whether you're looking for live entertainment, recording expertise, or
    private lessons, I’m here to help you bring your musical vision to life.
  </p>

  <div class="services-grid">
    {
      services.map((service) => (
        <div class="service-card">
          <h2 class="service-card-title">{service.title}</h2>
          <p class="service-card-description">{service.description}</p>
        </div>
      ))
    }
  </div>
</section>

<style>
  .services-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .services-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .services-description {
    color: #cccccc;
    font-size: 1.125rem;
    max-width: 600px;
    margin-bottom: 3rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    width: 100%;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .service-card {
    background-color: #1f2937;
    border-radius: 1.5rem;
    padding: 2rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
    transition:
      transform 0.3s,
      box-shadow 0.3s;
    cursor: default;
  }

  .service-card:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.8);
  }

  .service-card-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .service-card-description {
    color: #cccccc;
    font-size: 1rem;
  }
</style>
