  <script>
    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;

      // Calculate rotation angle based on scroll position
      const rotation = scrollY * 0.2; // Adjust speed here (higher = faster spin)

      const gr1 = document.querySelector(".gr1");
      const gr2 = document.querySelector(".gr2");

      if (gr1) {
        gr1.style.transform = `rotate(${rotation}deg)`;
      }
      if (gr2) {
        gr2.style.transform = `rotate(${rotation * 0.8}deg)`; // Slightly slower second one for nice effect
      }
    });
  </script>
